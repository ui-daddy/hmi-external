{
    "loginInfo": [
        {
            "value": "Sign in",
            "baseProperties": {
                "name": "signIn",
                "id": "signIn",
                "type": "staticText",
                "formName": "loginForm"
            },
            "expressionProperties": {
                "visible": "",
                "visibleValue": true
            },
            "layoutProperties": {
                "css": {
                    "configuration": {
                        "selectorName": ".element-child",
                        "xs": {
                            "text-align": "center",
                            "color": "white",
                            "parent-margin-bottom": "35px",
                            "parent-font-size": "30px"
                        }
                    },
                    "customClassName": "element-child"
                }
            }
        },
        {
            "baseProperties": {
                "name": "email",
                "id": "email",
                "type": "text",
                "formName": "loginForm"
            },
            "placeholder": "Enter Your username",
            "accessor": "obj.email",
            "expressionProperties": {
                "requiredValue": false,
                "required": "",
                "readOnly": "",
                "readOnlyValue": false,
                "disabled": "",
                "disabledValue": false,
                "visible": "",
                "visibleValue": true
            },
            "customAttributes": [
                {
                    "name": "disabled",
                    "value": false
                }
            ],
            "events": [
                {
                   "event": "",
                    "actions" :[ 
                           {
                               "actionType" : "setfield",
                               "field" : "$password$",
                               "fieldValue": "$userName$"

                           },
                           {
                            "actionType" : "setfield",
                            "field" : "$password$",
                            "fieldValue": "$userName$"
                            }
                    ],
                    "debounce": 3000
                }

            ]
        },
        {
            "baseProperties": {
                "name": "password",
                "id": "password",
                "formName": "loginForm",
                "type": "password"
            },
            "placeholder": "Password",
            "accessor": "obj.password",
            "expressionProperties": {
                "requiredValue": false,
                "required": "",
                "readOnly": "",
                "readOnlyValue": false,
                "disabled": "",
                "disabledValue": false,
                "visible": "",
                "visibleValue": true
            },
            "minRequirementPattern": "^.{4,20}$"
        }
    ],
    "loginButtons": [
        {
            "baseProperties": {
                "id": "loginBtn",
                "name": "loginBtn",
                "type": "submit",
                "formName": "loginForm",
                "label": "Login"
            },
            "layoutProperties": {
                "css": {
                    "themeClass": "btn-warning",
                    "customClassName": "login__btn",
                    "configuration": {
                        "selectorName": ".login__btn",
                        "xs": {
                            "width": "100%",
                            "parent-margin-top": "20px"
                        }
                    }
                }
            },            
            "expressionProperties": {
                "requiredValue": true,
                "required": "",
                "readOnly": "",
                "readOnlyValue": false,
                "disabled": "",
                "disabledValue": false,
                "visible": "",
                "visibleValue": true
            },
            "apiConfig": {
                "name": "loginButtonApi",
                "url": "https://upms-api.azurewebsites.net/api/user/login",
                "method": "POST",
                "isApplicationSessionAPI": true,
                "payloadParams": [
                    {
                        "paramName": "UserName",
                        "mappedField": "email"
                    },
                    {
                        "paramName": "Password",
                        "mappedField": "password"
                    }
                ],
                "onSuccess": {
                    "pageUrl": "/dashboard",
                    "sharedData": [
                    {
                        "varName": "name",
                        "responseAccessor": "firstName",
                        "cache": true
                    },
                    {
                        "varName": "surname",
                        "responseAccessor": "lastName",
                        "cache": true
                    }, {
                        "varName": "authenticated",
                        "staticData": "yes",
                        "cache": true
                    }],
                    "clearSharedData": ["name", "authenticated"]
                },
                "onError": {
                  "showErrorMessage": true,
                  "clearSharedData": ["name", "authenticated"]
                }
            }, 
            "events": [
                {
                   "event": "click",
                    "actions" :[ 
                           {
                               "actionType" : "submit",
                                "showLoading": true
                           }
                    ],
                    "debounce": 3000
                }
            ]
            
        },
        {
            "baseProperties": {
                "id": "forgotPwdLink",
                "name": "forgotPwdLink",
                "type": "link",
                "formName": "",
                "label": "Forgot Password?"
            },
            "accessor": "",
            "href": "/forget-password",
            "layoutProperties": {
                "css": {
                    "customClassName": "login__forgot-link",
                    "configuration": {
                        "selectorName": ".login__forgot-link",
                        "xs": {
                            "parent-margin": "10px",
                            "parent-justify-content":"center"
                        }
                    }
                }
            }
        },
        {
            "baseProperties": {
                "id": "signupBtn",
                "name": "signupBtn",
                "type": "button",
                "formName": "",
                "label": "Create New Account"
            },
            "accessor": "",
            "navigateToPage": "/signup",
            "layoutProperties": {
                "css": {
                    "themeClass": "btn-success",
                    "customClassName": "login__signup-btn",
                    "configuration": {
                        "selectorName": ".login__signup-btn",
                        "xs": {
                            "width": "100%",
                            "parent-border-top": "1px solid black",
                            "parent-padding-top": "25px"
                        }
                    }
                }
            }
        }
    ]
}
